uint8_t key_4_senden(volatile uint32_t *base_addr){

	uint16_t key;
	uint16_t distance[ARRAY_LENGHT];
	uint8_t xbee_addr[4];
	uint8_t xbee_cnt = 0;
	uint8_t text_1_key_4[] = {	" Setze XBee RX Addr "
								"       0x           "
								"\n"
								"      Press #       "};

	uint8_t text_2_key_4[] = {	"\n "
								" TX Daten via Xbee  "
								"\n"
								"      Press #       "};

	uint8_t text_3_key_4[] = {	"   Speedy sendet !  "};

	uint8_t text_4_key_4[] = {	"      Fertig!       "};

	uint8_t text_5_key_4[] = {	"    Laser misst !   "};


	clear_lcd();
	set_courser_lcd(1, 1);
	write_data_lcd(text_1_key_4, sizeof(text_1_key_4));

	usleep(500*1000);

	set_courser_lcd(2, 10 + xbee_cnt);
	underline_cursor_lcd();

	while(xbee_cnt < 4){

		key = read_key_lcd();

		switch (key){

			case KEY_1:

				xbee_addr[xbee_cnt] = '1';

				write_data_lcd(&xbee_addr[xbee_cnt] , 1);

				xbee_cnt += 1;

				if(xbee_cnt < 4)
					set_courser_lcd(2, 10 + xbee_cnt);

				if(xbee_cnt == 4)
					hide_cursor_lcd();

			break;

			case KEY_2:

				xbee_addr[xbee_cnt] = '2';

				write_data_lcd(&xbee_addr[xbee_cnt] , 1);

				xbee_cnt += 1;

				if(xbee_cnt < 4)
					set_courser_lcd(2, 10 + xbee_cnt);

				if(xbee_cnt == 4)
					hide_cursor_lcd();

			break;

			case KEY_3:

				xbee_addr[xbee_cnt] = '3';

				write_data_lcd(&xbee_addr[xbee_cnt] , 1);

				xbee_cnt += 1;

				if(xbee_cnt < 4)
					set_courser_lcd(2, 10 + xbee_cnt);

				if(xbee_cnt == 4)
					hide_cursor_lcd();

			break;

			case KEY_4:

				xbee_addr[xbee_cnt] = '4';

				write_data_lcd(&xbee_addr[xbee_cnt] , 1);

				xbee_cnt += 1;

				if(xbee_cnt < 4)
					set_courser_lcd(2, 10 + xbee_cnt);

				if(xbee_cnt == 4)
					hide_cursor_lcd();

			break;

			case KEY_5:

				xbee_addr[xbee_cnt] = '5';

				write_data_lcd(&xbee_addr[xbee_cnt] , 1);

				xbee_cnt += 1;

				if(xbee_cnt < 4)
					set_courser_lcd(2, 10 + xbee_cnt);

				if(xbee_cnt == 4)
					hide_cursor_lcd();


			break;

			case KEY_6:

				xbee_addr[xbee_cnt] = '6';

				write_data_lcd(&xbee_addr[xbee_cnt] , 1);

				xbee_cnt += 1;

				if(xbee_cnt < 4)
					set_courser_lcd(2, 10 + xbee_cnt);

				if(xbee_cnt == 4)
					hide_cursor_lcd();

			break;

			case KEY_7:

				xbee_addr[xbee_cnt] = '7';

				write_data_lcd(&xbee_addr[xbee_cnt] , 1);

				xbee_cnt += 1;

				if(xbee_cnt < 4)
					set_courser_lcd(2, 10 + xbee_cnt);

				if(xbee_cnt == 4)
					hide_cursor_lcd();

			break;

			case KEY_8:

				xbee_addr[xbee_cnt] = '8';

				write_data_lcd(&xbee_addr[xbee_cnt] , 1);

				xbee_cnt += 1;

				if(xbee_cnt < 4)
					set_courser_lcd(2, 10 + xbee_cnt);

				if(xbee_cnt == 4)
					hide_cursor_lcd();

			break;

			case KEY_9:

				xbee_addr[xbee_cnt] = '9';

				write_data_lcd(&xbee_addr[xbee_cnt] , 1);

				xbee_cnt += 1;

				if(xbee_cnt < 4)
					set_courser_lcd(2, 10 + xbee_cnt);

				if(xbee_cnt == 4)
					hide_cursor_lcd();

			break;

			case KEY_0:

				xbee_addr[xbee_cnt] = '0';

				write_data_lcd(&xbee_addr[xbee_cnt] , 1);

				xbee_cnt += 1;

				if(xbee_cnt < 4)
					set_courser_lcd(2, 10 + xbee_cnt);

				if(xbee_cnt == 4)
					hide_cursor_lcd();

			break;

			default:
				NULL;
			break;

		}

		usleep(200*1000);

	}


	do{

		key = read_key_lcd();

		usleep(100*1000);

	}while(key != 0x0800);

	clear_lcd();
	set_courser_lcd(1, 1);
	write_data_lcd(text_2_key_4, sizeof(text_2_key_4));

	usleep(1000*1000);

	do{

		key = read_key_lcd();

		usleep(100*1000);

	}while(key != 0x0800);

	clear_lcd();
	set_courser_lcd(2, 1);
	write_data_lcd(text_3_key_4, sizeof(text_3_key_4));

	//Lese Laser Daten
	doMeasurement(base_addr, distance);

	//Xbee

	clear_lcd();
	set_courser_lcd(2, 1);
	write_data_lcd(text_4_key_4, sizeof(text_4_key_4));

	usleep(1000*1000);

	return 0;
}
